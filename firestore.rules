rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Restrict access to the requests collection to admins only
    match /requests/{requestId} {
      allow read, write: if false;
    }

    // Allow users to read and write only their own document in the users collection
    match /users/{userId} {
      // Allow creating user document during account creation (before email verification)
      allow create: if request.auth != null && request.auth.uid == userId;
      // Require email verification for reading and updating existing documents
      allow read, update, delete: if request.auth != null && request.auth.uid == userId && request.auth.token.email_verified;
    }
  }
}
